CC=@CC@
CFLAGS=-g
CPPFLAGS=@CPPFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ -lpcirl

.SUFFIXES: .c .o

.c.o:
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $<

all: irlearn irsend

install: all
	@INSTALL@ -c irsend /usr/local/bin
	@INSTALL@ -c irlearn /usr/local/bin

irlearn: irlearn.o irdb.o
	$(CC) -o $@ irlearn.o irdb.o $(LDFLAGS) $(LIBS) 

irsend: irsend.o irdb.o
	$(CC) -o $@ irsend.o irdb.o $(LDFLAGS) $(LIBS) 

clean:
	rm -f *.o irlearn irsend

distclean: clean
	rm -f config.log config.status config.cache Makefile
