// Log4j2 configuration
{
  "configuration": {
    "status": "info",
    "appenders": {
      "console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "patternlayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%L - %m%n"
        }
      }
    },
    "loggers": {
      "logger" : [
        {
          "name": "org.apache.jasper",
          "level" : "info"
        }, {
          "name": "org.apache.tomcat",
          "level" : "info"
        }, {
          "name": "org.eclipse.jetty",
          "level" : "info"
        }
      ],
      "root": {
        "level": "trace",
        "appender-ref": {
          "ref": "Console"
        }
      }
    }
  }
}

